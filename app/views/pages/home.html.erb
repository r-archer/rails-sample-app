<% if signed_in? %>

  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost">What's up?</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>

<% else %>

<h1>Sample App</h1>
<p>
  This is the sample app pushed to Pivotal Cloud Foundry for Ricky Archer's OutBound PM interview. <br><br>
  (This app is forked from the <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a> sample application.)
</p>

<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>

<% end %>